<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_rencana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rencana"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_donor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donor"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_rencana"
        app:layout_constraintEnd_toEndOf="@id/tv_rencana"
        app:layout_constraintStart_toStartOf="@id/tv_rencana"/>

    <TextView
        android:id="@+id/tv_jum_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="70"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_donor"
        app:layout_constraintStart_toStartOf="@id/tv_rencana"
        app:layout_constraintEnd_toEndOf="@id/tv_rencana"/>

    <View
        android:id="@+id/view"
        android:layout_width="1.5dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@color/grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_rencana"/>

    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="INSTANSI"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_instansi_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="sdfsf"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/unit"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintTop_toBottomOf="@id/unit"/>

    <ImageView
        android:id="@+id/iv_icon_time"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_jam"
        app:layout_constraintTop_toBottomOf="@id/tv_instansi_value"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="09:09:09"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/iv_icon_time"
        app:layout_constraintStart_toEndOf="@id/iv_icon_time"
        app:layout_constraintBottom_toBottomOf="@id/iv_icon_time"/>

    <ImageView
        android:id="@+id/iv_icon_place"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_alamat"
        app:layout_constraintTop_toTopOf="@id/iv_icon_time"
        app:layout_constraintBottom_toBottomOf="@id/iv_icon_time"
        app:layout_constraintStart_toEndOf="@id/tv_time_value"/>

    <TextView
        android:id="@+id/tv_place_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Bandung"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/iv_icon_place"
        app:layout_constraintStart_toEndOf="@id/iv_icon_place"
        app:layout_constraintBottom_toBottomOf="@id/iv_icon_place"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_jumlah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="JUMLAH"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_jum_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="700"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_jumlah"
        app:layout_constraintStart_toStartOf="@id/tv_jumlah"
        app:layout_constraintEnd_toEndOf="@id/tv_jumlah"/>

    <View
        android:id="@+id/view"
        android:layout_width="1.5dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@color/grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_jumlah"/>

    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginStart="16dp"
        android:text="UNIT"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@id/view"/>

    <TextView
        android:id="@+id/tv_unit_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sdfsf"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/unit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unit"/>

</android.support.constraint.ConstraintLayout>